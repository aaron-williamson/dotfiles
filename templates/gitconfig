[alias]
	alias = "!f() { git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ / | grep \"^$1\\b\"; }; f"
	get-pr = "!f() { git fetch $1 refs/pull/$2/head:$1-pr-$2; }; f"
	dt = difftool
	dw = diff -w
	lg = log --graph --oneline
	lgp = !git lg -p
	lgpw = !git lg -p -w
	st = status
	aa = add --all
	ap = add -p
	amend = commit --amend
	di = diff
	dc = diff --cached
	co = checkout
	ci = commit --verbose
	fa = fetch --all
	lp = log -p
	lpw = log -p -w
	rt = rev-parse --show-toplevel
	sb = show-branch --list
	sba = ls-remote -h aaron
	sbo = ls-remote -h origin
	sbu = ls-remote -h upstream
	lb = branch --list
	lbr = branch -r --list
	lba = branch -a
	bv = branch -vv
	sm = submodule
	rv = remote -v
