[diff]
	tool = vimdiff
<% if config[:submodule] -%>
	submodule = <%= config[:submodule] %>
<% end -%>
<% if config[:diff] -%>
	algorithm = <%= config[:diff] %>
<% end -%>
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictStyle = diff3
[mergetool]
	prompt = false
[user]
	email = <%= config[:email] %>
	name = <%= config[:user] %>
[alias]
	alias = "!f() { git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ / | grep \"^$1\\b\"; }; f"
	get-pr = "!f() { git fetch $1 refs/pull/$2/head:$1-pr-$2; }; f"
	ds = diff --submodule=short
	dt = difftool
	dw = diff -w
	lg = log --graph --pretty=format:'%C(bold red)%h%Creset -%C(<%= config[:decorate_color] %>)%d%Creset %s %C(green)(%ar)%Creset %C(bold blue)<%%an>%Creset'
	lgp = !git lg -p
	lgpw = !git lg -p -w
	st = status
	aa = add --all
	ap = add -p
	amend = commit --amend
	di = diff
	dc = diff --cached
	dcs = diff --cached --submodule=short
	co = checkout
	ci = commit --verbose
	fa = fetch --all
	lp = log -p
	lpw = log -p -w
	rt = rev-parse --show-toplevel
	sb = show-branch --list
	sba = ls-remote -h aaron
	sbo = ls-remote -h origin
	sbu = ls-remote -h upstream
	lb = branch --list
	lbr = branch -r --list
	lba = branch -a
	bv = branch -vv
	sm = submodule
	rv = remote -v
[status]
	submodulesummary = 1
[rerere]
	enabled = true
[color]
	ui = auto
<% if config[:fancy_diff] -%>
[core]
	pager = diff-so-fancy | less
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
<% end -%>
<% if config[:push] -%>
[push]
	default = <%= config[:push] %>
<% end -%>
