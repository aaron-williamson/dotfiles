[diff]
  tool = vimdiff
  submodule = log
[difftool]
  prompt = false
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
[alias]
  dt = difftool
  lg = log --graph --oneline
  st = status
  aa = add --all
  amend = commit --amend
  di = diff
  dc = diff --cached
  co = checkout
  ci = commit --verbose
  fa = fetch --all
  lp = !git lg -p
  rt = rev-parse --show-toplevel
  sb = show-branch --list
  sbr = ls-remote -h origin
  lb = branch --list
  lbr = branch -r --list
  lba = branch -a
[push]
  default = simple
[status]
  submodulesummary = 1
