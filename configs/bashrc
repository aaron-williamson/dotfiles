#!/bin/bash

# Vim mode
set -o vi

# Alias neovim if we have it
if hash "nvim"; then
  alias vim="nvim"
  alias vi="nvim"
else
  alias vi="vim"
fi

# Mac aliases for ls
if [[ "$OSTYPE" == darwin* ]]; then
  alias ls="ls -lhFG"
  alias la="ls -alhGF"
else
  alias ls="ls -lhF --color=auto"
  alias la="ls -alhF --color=auto"
fi

alias quit="exit"

# Enable ctrl-f for searching history forward
bind '\C-f:forward-search-history'

# Prompt
export PS1="[\u@\h \W]\$ "
